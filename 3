#include "iostream"
#include "vector"
#include <list>
#include <queue>
#include "algorithm"


class ListGraph {
private:

    std::vector<std::list<int>> matrix;
    std::vector<int> colours;

public:

    ListGraph(int ver);

    ListGraph(const ListGraph& other);

    void AddEdge(int from, int to);

    int VerticesCount() const;

    void GetNextVertices(int vertex, std::vector<int> &vertices) const;

    void GetPrevVertices(int vertex, std::vector<int> &vertices) const ;
    
};


void ListGraph::AddEdge(int from, int to) {
    if (std::find(matrix[from].begin(), matrix[from].end(), to) == matrix[from].end()){
        matrix[from].push_back(to);
    }
    if (std::find(matrix[to].begin(), matrix[to].end(), from) == matrix[to].end()){
        matrix[to].push_back(from);
    }
}

int ListGraph::VerticesCount() const {
    return matrix.size();
}

void ListGraph::GetNextVertices(int vertex, std::vector<int> &vertices) const {
    vertices = {matrix[vertex].begin(), matrix[vertex].end()};
}

void ListGraph::GetPrevVertices(int vertex, std::vector<int> &vertices) const {
    for(int i=0; i<matrix.size();i++){
        if (std::find(matrix[i].begin(), matrix[i].end(), vertex) != matrix[i].end()){
            vertices.push_back(i);
        }
    }
}

ListGraph::ListGraph(int ver) : matrix(ver) , colours(ver, 0){}

ListGraph::ListGraph(const ListGraph &other) : matrix(other.matrix) {}

int deWae(ListGraph* G, int a, int b) {
    int min = G->VerticesCount();
    int flg = 0;
    std::vector<int> high(G->VerticesCount(), -5);
    std::vector<int> ways(G->VerticesCount(), 0);
    std::queue<int> q;
    high[a]=0;
    q.push(a);
    ways[a]=1;
    while(!q.empty()) {
        int curr = q.front();

        //std::cout << curr << "-poped    ";

        std::vector<int> next;
        G->GetNextVertices(curr, next);
        q.pop();



        for (int i = 0; i < next.size(); i++) {
            int n = next[i];
            //std::cout<<n<<") ";
            bool f=(high[n]==high[curr]+1);
            if (f||high[n]==-5) {
                if (n != b) {
                    //std::cout << n << "-pushed    ";
                    if(f){
                        ways[n]+=ways[curr];
                    }else{
                        ways[n]=ways[curr];
                        q.push(n);
                    }
                    high[n] = high[curr] + 1;
                } else {

                    //std::cout<<" zdes ";
                    if (high[curr] == min) {
                        flg+=ways[curr];
                    }
                    if (high[curr] < min) {
                        min = high[curr];
                        flg = ways[curr];

                    }
                }
            }
        }

        //std::cout<<ways[4];
    }

    return flg;
}


int solve(int n, int v, int* in, int a, int b){
    ListGraph G=ListGraph(n);
    for(int i=0;i<v;i++){
        G.AddEdge(in[2*i], in[2*i+1]);
    }

    return deWae(&G, a, b);
}

int main() {
    int n;
    int v;
    int a,b;
    std::cin >> n;
    std::cin >> v;
    int* in = new int[2*v];
    for(int i=0;i<v;i++){
        std::cin >> in[2*i] >> in[2*i+1];
    }

    std::cin >> a >> b;

    std::cout << solve(n, v, in, a, b);

    delete [] in;
    return 0;
}
